{{!-- study component hbs --}}
<h1>{{study.officialTitle}}</h1>

<table class='table table-dark'>
  <thead {{action 'toggleHidden'}}>
    <tr>
      <th scope="col" colspan='2'><h3>General Info</h3></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">Type</th>
      <td>{{validate-exists study.studyType}}</td>
    </tr>
    <tr>
      <th scope="row">Phase</th>
      <td>{{validate-exists study.phase}}</td>
    </tr>
    <tr>
      <th scope="row">Status</th>
      <td>{{validate-exists study.overallStatus}}</td>
    </tr>
    <tr>
      <th scope="row">Enrollment</th>
      <td>{{validate-exists study.enrollment}}</td>
    </tr>
    <tr>
      <th scope="row">Enrollment Type</th>
      <td>{{validate-exists study.enrollmentType}}</td>
    </tr>
    <tr>
      <th scope="row">Source</th>
      <td>{{validate-exists study.source}}</td>
    </tr>
    <tr>
      <th scope="row">FDA Regulated Drug</th>
      <td>{{validate-exists study.isFdaRegulatedDrug}}</td>
    </tr>
    <tr>
      <th scope="row">FDA Regulated Device</th>
      <td>{{validate-exists study.isFdaRegulatedDevice}}</td>
    </tr>
    <tr>
      <th scope="row">Target Duration</th>
      <td>{{validate-exists study.targetDuration}}</td>
    </tr>
    <tr>
      <th scope="row">Primary Completion Date</th>
      <td>{{validate-exists study.primaryCompletionDate}}</td>
    </tr>
    <tr>
      <th scope="row">Baseline Population</th>
      <td>{{validate-exists study.baselinePopulation}}</td>
    </tr>
    <tr>
      <th scope="row">Processed</th>
      <td>{{validate-exists study.nlmDownloadDateDescription}}</td>
    </tr>
  </tbody>
</table>

{{#each study.responsibleParty as |party|}}
{{#if party.name}}
<table class='table table-dark'>
  <thead>
    <tr>
      <th scope="col" colspan='2'><h3>Responsible Party</h3></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">Name</th>
      <td>{{validate-exists party.name}}</td>
    </tr>
    <tr>
      <th scope="row">Party Type</th>
      <td>{{validate-exists party.responsiblePartyType}}</td>
    </tr>
    <tr>
      <th scope="row">Title</th>
      <td>{{validate-exists party.title}}</td>
    </tr>
    <tr>
      <th scope="row">Organization</th>
      <td>{{validate-exists party.organization}}</td>
    </tr>
    <tr>
      <th scope="row">Affiliation</th>
      <td>{{validate-exists party.affiliation}}</td>
    </tr>
  </tbody>
</table>
{{/if}}
{{/each}}

<table class='table table-dark'>
  <thead>
    <tr>
      <th scope="col" colspan='3'><h3>Sponsors</h3></th>
    </tr>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Agency Class</th>
      <th scope="col">Lead Or Collaborator</th>
    </tr>
  </thead>
  <tbody>
  {{#each study.sponsors as |sponsor|}}
    <tr>
      <th scope="row">{{sponsor.name}}</th>
      <td>{{validate-exists sponsor.agencyClass}}</td>
      <td>{{validate-exists sponsor.leadOrCollaborator}}</td>
    </tr>
  {{/each}}
  </tbody>
</table>


