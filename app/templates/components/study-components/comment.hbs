
<div class='user-info'>
  <img src={{userProfile}} width='50px'>
  <p> {{comment.user.email}}</p>
</div>

<div class='comment-body'>
  <form class='form-inline'>
     {{#if editable }}
      {{textarea action='editComment' rows='10' class="form-control" value=comment.text type='text'}}
      {{else}}
      {{comment.text}}
    {{/if}}
  </form>
</div>

  {{#if isOwner }}
  <div class='edits'>
    <button {{action 'deleteComment' comment}} class="btn btn-default btn-sm btn-warning">
      <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
    </button>
    <button {{action 'toggleEditable' }} class="btn btn-default btn-sm btn-primary">
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    </button>
  </div>
  {{/if}}
