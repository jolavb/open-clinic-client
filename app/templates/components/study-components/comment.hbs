
 <form {{action 'editComment' on='submit'}}>
  {{input value=comment.text}}
</form>

  {{#if isOwner }}
  <div class='edits'>
    <button {{action 'deleteComment' comment}} class="btn btn-default btn-sm btn-warning">
      <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
    </button>
    <button {{action 'editComment' comment}} class="btn btn-default btn-sm btn-primary">
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    </button>
  </div>
  {{/if}}
